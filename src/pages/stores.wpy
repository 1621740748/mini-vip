    }
    getStoreInfo(){
      const url = '/api/odata/v4/' + wx.getStorageSync('X-Space-Id') + '/vip_store';
      console.log("----",url)
      const data = {
        // $filter: 'user eq ' + wx.getStorageSync('X-Space-Id'),
        $expand: 'owner($select=name)',
        $count: true,
        $select: 'address,name'
      };
    req.get(url, data).then(res => {
      const stores = res.value;
      this.stores = stores;
      this.$apply();
    });
  }
  }
