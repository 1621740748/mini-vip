<template>
  <view class="page">
    <view class="page__hd">
      <view class="love-title">告别刷脸时代，寻找志趣相投的有缘人</view>
    </view>
    <view class="page__bd">
      <view class="love-summary">无颜是一套人工智能匹配算法，根据您的喜好和对方喜好，每周为您推荐一位相互匹配值最高的有缘人。</view>
      <button class="btn-join" @tap="join">立即加入</button>
      <view class="love-licence"></view>
    </view>

    <view>
      <navigator url="/pages/love/papers_view" class="btn-join" style="text-align: center;padding: 10px; margin-top:150px">💗爱的抉择💗</navigator>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy';
import { baseUrl } from '@/config';
import { loveSpaceId } from '@/config';
import pageRouter from '@/utils/pageRouter'

export default class LoveIndex extends wepy.page {
  config = {
    navigationBarTitleText: '无颜'
  };

  data = {
    baseUrl: baseUrl,
    space_id: null,
  };

  async onLoad (e) {
    this.space_id = e.space_id || loveSpaceId;
    console.log("this.space_id============", this.space_id);

    await this.$parent.login();

    if(!this.space_id){
      wx.showToast({
        title: "未配置工作区ID",
        icon: "none"
      });
    }
  }

  methods = {
    join(){
      pageRouter.navigateTo({url: `/pages/love/invite_code?space_id=${this.space_id}`});
    }
  };
}
</script>
