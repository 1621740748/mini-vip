    .ion {
      font-size: 60rpx;
      color: #fff;
    }

    .stared {
      color: #fcb95b;
    }
  }
  .page {
    &.is-open {
      .header{
        .cover-wrapper{
          height: 300rpx;
          &::after {
            content: '';
            position: absolute;
            height: 160rpx;
            bottom: -60rpx;
            left: 0;
            right: 0;
            background-image: linear-gradient(to bottom, transparent , #efeef3 50%);
          }
        }
      }
      .weui-grids{
        margin-top: 1.17647059em;
