            color: #777;
            justify-content: center;
            view {
              padding: 0 6rpx;
            }
          }

          .star-count {
            margin-top: 0px;
            color: #898989;
            display: none;
          }

          .btn-star {
            color: #018cc6;
          }
          .btn-manage {
            background: #018cc6;
