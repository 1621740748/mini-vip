<template>
  <view class="page">
    <view class="page__hd">
      <view class="love-title">说说你的情况</view>
    </view>
    <view class="page__bd">
      <view class="love-summary">然后我们才能为你匹配喜欢你的人</view>
      <button class="btn-join" @tap="next">下一步</button>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy';

export default class CoverAboutYourself extends wepy.page {
  config = {
    navigationBarTitleText: '无颜'
  };

  data = {
    space_id: ''
  };

  async onLoad(e) {
    this.space_id = e.space_id;
    this.$apply();

    const spaceId = this.space_id;

    let my_customers = this.$parent.globalData.my_customers;
    let current_customer = my_customers.find(customer => {
      return customer.space == spaceId;
    });
    if (
      current_customer &&
      current_customer._id &&
      !current_customer.questionnaire_progess
    ) {
      await this.$parent.update(
        'vip_customers',
        current_customer._id,
        { questionnaire_progess: 1 },
        spaceId
      );
    }
  }

  methods = {
    next() {
      const answeredUrl = encodeURIComponent(`/pages/love/cover_you_looking_for?space_id=${this.space_id}`);
      wx.navigateTo({
        url: `/pages/love/papers_view?object_name=love_about_me&space_id=${this.space_id}&required=true&answered_url=${answeredUrl}`
      });
    }
  };
}
</script>
