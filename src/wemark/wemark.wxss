.wemark_wrapper{
	margin:10px 0;
	line-height: 1.8em;
	color: #838287;
}
.wemark_block_h1{
	color: #353535;
	font-weight: bold;
	font-size:19px;
	padding-bottom:.5em;
	margin-bottom:1em;
	border-bottom:1px solid #f0f0f0;
}
.wemark_block_h2{
	color: #353535;
	font-weight: bold;
	font-size:19px;
	margin-top:1em;
	margin-bottom:1em;
}
.wemark_block_h3{
	color: #353535;
	font-weight: bold;
	font-size:18px;
	margin-top: 1em;
	margin-bottom: 1em;
}
.wemark_block_h4{
	color: #353535;
	font-size:18px;
	font-weight: bold;
	margin-top: 1em;
	margin-bottom: 1em;
}
.wemark_block_h5{
	color: #353535;
	font-size:18px;
	font-weight: bold;
	margin-top: 1em;
	margin-bottom: 1em;
}
.wemark_block_h6{
	color: #353535;
	font-weight: bold;
	font-size:18px;
	margin-top: 1em;
	margin-bottom: 1em;
}
.wemark_block_p{
	margin-top:1.5em;
	margin-bottom:1.5em;
}
.wemark_block_video{
	margin-top:1em;
	margin-bottom:1em;
	width:100%;
}
.wemark_block_blockquote_p{
	margin-top:1em;
	margin-bottom:1em;
	padding: 1em;
	font-size:17px;
	background:#f1f4f6;
  	border-radius: 5px;
}
.wemark_block_ul_li_p, .wemark_block_ol_li_p {
	margin-left: 10px;
	display: flex;
}
.wemark_block_ul_li_p>.wemark_inline_text,
.wemark_block_ol_li_p>.wemark_inline_text,
.wemark_block_ul_li_ul_li_p>.wemark_inline_text {
	min-width: 20px;
	display: inline-block;
}
.wemark_block_ul_li_ul_li_p {
	margin-left: 20px;
}
/* .wemark_block_ul_li_p::before{
	content:'• ';
} 
.wemark_block_ul_li_ul_li_p::before,
.wemark_block_ol_li_ul_li_p::before{
	content:'◦ ';
} */
.wemark_block_ul_li_ul_li_p,
.wemark_block_ul_li_ol_li_p,
.wemark_block_ol_li_ul_li_p,
.wemark_block_ol_li_ol_li_p{
	padding-left: 1em;
}
.wemark_block_ul_li_p:last{
	margin-bottom:1em;
}
.wemark_block_code{
	padding:10px;
	font-size:17px;
	line-height: 1.5em;
	border:1px solid #f0f0f0;
	white-space: pre;
	overflow: auto;
}
.wemark_block_table_tr{
	display: flex;
	border-right:1px solid #e0e0e0;
	border-bottom:1px solid #e0e0e0;
}
.wemark_inline_table_th,
.wemark_inline_table_td{
	flex:1;
	padding:5px;
	font-size:28rpx;
	border-left:1px solid #e0e0e0;
	word-break: break-all;
}
.wemark_inline_table_td:last{
	border-top:1px solid #e0e0e0;
}
.wemark_inline_table_th{
	background:#f0f0f0;
	border-top:1px solid #e0e0e0;
}
.wemark_inline_strong{
	font-weight: bold;
	word-wrap:break-word;
	color: #353535;
}
.wemark_inline_em{
	font-style: italic;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_inline_deleted{
	text-decoration: line-through;
	padding:0 5px;
	word-wrap:break-word;
}
.wemark_image_wrapper {
  margin:0 -15px;
}
.wemark_image_wrapper .wemark_inline_image {
	width:100%;
	height:auto;
  display: block;
}
.wemark_image_wrapper .wemark_inline_image_alt {
  padding: 5px 15px;
	background: #f1f4f6;
	color: #96969a;
	font-size:0.9em;
	text-align: center;
}
.wemark_inline_code{
	background:#f0f0f0;
	padding:3px 5px;
	word-wrap:break-word;
}
.wemark_inline_text{
	word-wrap:break-word;
}
.wemark_navigator{
	display:inline-block;
	color:#00a3f5;
}
.wemark_block_ul_li_p + .wemark_block_h1 {
	margin-top:1em;
}
.wemark_navigator.wemark_image_navigator {
	display: block;
}
.wemark_navigator.wemark_image_navigator .wemark_image_wrapper {
	margin: 0px;
	padding: 0px;
}
.wemark_navigator.wemark_image_navigator .wemark_image_wrapper .wemark_inline_image_alt {
  color:#00a3f5;
}
.wemark_block_blockquote_p .wemark_image_wrapper:first-child{
	margin: -15px!important;
}

.wemark_block_blockquote_p .wemark_image_wrapper:first-child .wemark_inline_image{
	border-top-left-radius:5px;
	border-top-right-radius: 5px; 
}